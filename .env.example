# Neon DB Configuration
# Get this from your Neon project dashboard
DATABASE_URL=postgresql://neondb_owner:your_password@ep-your-db.neon.tech/neondb?sslmode=require

# Optional individual DB parameters (for reference)
DB_HOST=ep-your-db.neon.tech
DB_PORT=5432
DB_NAME=neondb
DB_USER=neondb_owner
DB_PASSWORD=your_password

# Stripe Configuration
# Get these from your Stripe dashboard
STRIPE_SECRET_KEY=sk_test_your_real_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_real_webhook_secret_here

# Server Configuration
HTTP_PORT=8080
GRPC_PORT=9090
LOG_LEVEL=info

# Service Configuration
SERVICE_NAME=billing-service
ENVIRONMENT=development

# Optional: Cerberus Integration (for production)
# Set this if you need to connect to Cerberus service
CERBERUS_GRPC_DIAL_ADDRESS=cerberus-service:50051
